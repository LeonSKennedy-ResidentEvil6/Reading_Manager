<h1>Create a new reading list</h1>

<%= render partial: "layouts/errors", locals: { object: @list } %>

<%= form_for(@list) do |f| %>

    <%= f.label "select a genre for the list" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: true %><br>

    <p>Or create a new genre: 
        <%= f.fields_for :genre do |g| %>
        <%= g.text_field :name %>
        <% end %>
    </p>
    <br>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :description %><br>
    <%= f.text_area :description %><br>

    <%= f.submit %>

<% end %>