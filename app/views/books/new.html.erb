<h1>Add a new book</h1>


<% if @book.errors.any? %>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @book do |f|%>
  <%= f.hidden_field :list_id %>

    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %><br>
    </p>
    <br>
    <p>
        <%= f.label :author %><br>
        <%= f.text_area :author %><br>
    </p>
    <br>
    <p>
        <%= f.label :note %><br>
        <%= f.text_area :note %><br>
    </p>
    <br>
    <%= f.submit "Create book" %>

<% end %>