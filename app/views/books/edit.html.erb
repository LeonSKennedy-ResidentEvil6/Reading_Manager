<h1>Edit this book: <%= @book.title %>

<%= render partial: "layouts/errors", locals: { object: @book } %>

<%= form_for([@book]) do |f|%>
    <p>
        <%= f.label :list %>
        <%= f.collection_select :list_id, List.all, :id, :title %>
    </p>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %><br>
    </p> 
    <br>
    <p>
        <%= f.label :author %><br>
        <%= f.text_area :author %><br>
    </p>
    <br>
    <p>
        <%= f.label :note %><br>
        <%= f.text_area :note %><br>
    </p>
    <br>
    <%= f.submit %>

<% end %>